<script>
document.addEventListener('DOMContentLoaded', function() {
  if (window.matchMedia('(display-mode: standalone)').matches) {
    const savedNavBar = document.querySelector('.floating-nav-bar');

    if (!savedNavBar) {
      const navBar = document.createElement('div');
      navBar.classList.add('d-flex', 'justify-content-between', 'align-items-center', 'fixed-bottom', 'bg-white', 'p-1', 'floating-nav-bar', 'border-top'); // Apply Bootstrap classes for styling

      const createIconButton = (iconClass, url, labelText) => {
        const button = document.createElement('button');
        button.classList.add('btn', 'btn-white', 'rounded', 'mb-2', 'd-flex', 'flex-column', 'align-items-center'); // Add margin and style for text labels
        const icon = document.createElement('i');
        icon.className = iconClass + ' fs-2 mb-1'; // Set icon size and margin
        const text = document.createElement('span');
        text.textContent = labelText;
        text.style.fontSize = '12px'; // Adjust font size for the text label
        button.appendChild(icon);
        button.appendChild(text);
        button.addEventListener('click', () => { window.location.href = url; });
        return button;
      };

      const addButton = (iconClass, url, labelText) => {
        const button = createIconButton(iconClass, url, labelText);
        navBar.appendChild(button);
      };

      addButton('fa fa-free-code-camp', 'https://www.jasrard.ca', 'Feed');
      addButton('fa fa-diamond', 'https://www.jasrard.ca/rewards', 'Rewards');
      addButton('fa fa-th', 'https://www.jasrard.ca/shop', 'Shop');
      addButton('fa fa-heart-o', 'https://www.jasrard.ca/shop/wishlist', 'Fav');
      addButton('fa fa-user-o', 'https://www.jasrard.ca/my', 'Account');

      document.body.appendChild(navBar);
    }
  }
});
</script>
